{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "prConcurrentLimit": 3,
  "schedule": [
    "* 16-19 15 * *"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Automerge patch and minor updates for stable Python dependencies",
      "matchManagers": [
        "pep621",
        "uv",
        "pip_requirements",
        "pip-compile",
        "pipenv",
        "poetry"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "groupName": "patch-minor-updates"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions"
    },
    {
      "description": "Separate PR for devcontainer updates",
      "matchManagers": [
        "devcontainer"
      ],
      "groupName": "devcontainer",
      "groupSlug": "devcontainer"
    },
    {
      "description": "Separate PR for Copier template updates",
      "matchManagers": [
        "copier"
      ],
      "groupName": "Copier template",
      "groupSlug": "copier"
    },
    {
      "description": "Disable minor and major Docker image updates",
      "matchCategories": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "enabled": false
    }
  ]
}
